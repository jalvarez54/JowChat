                                http://www.mfiles.co.uk/mp3-downloads/book2-fugue02.mp3 ,
</li>
                    </ul>

                </div>
            </div><!-- multimedia samples div -->
            <!-- private div -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-bullhorn"></span>&nbsp;Private Discussion</h3>
                </div>
                <div class="panel-body panelScrollDown">
                    <div id="inputPrivateMessage" class="well-xs alert alert-danger divHide">
                    </div>
                </div>
            </div><!-- private div -->
            <!-- public div -->
            <div class="well-xs alert alert-warning">
                <div id="inputMessage" class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pencil"></span><strong>&nbsp;Your Message</strong></span>
                    <input type="text" class="form-control input-sm" placeholder="Your message here..." id="txtMessage" />
                    <div class="input-group-btn">
                        <div class="btn-group btn-group-xs">
                            <button class="btn btn-primary" type="button" id="btnSendMsg" value="Send">Broadcast</button>
                        </div>
                    </div>
                </div>
            </div><!-- public div -->
            <!-- discussion div -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-bullhorn"></span>&nbsp;Public Discussion</h3>
                </div>
                <div id="panelChatMessages" class="panel-body panelScrollDown">
                    <div id="divChatMessages"></div>
                </div>
            </div><!-- discussion div -->
        </div><!-- center col -->
        <!-- right col -->
        <div class="col-lg-8 col-sm-12">

        </div><!-- right col -->
    </div><!-- middle row -->
</div><!-- container -->
