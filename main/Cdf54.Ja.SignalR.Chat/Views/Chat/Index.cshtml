@using JA.UTILS.Helpers

@{
    ViewBag.Title = "Chat";
}

@section scripts {
    <!--Script references. -->
    @Scripts.Render("~/bundles/chat")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="@Url.Content("~/signalr/hubs")"></script>
}

<!-- container -->
<div id="divContainer" class="container">
    <!-- up row -->
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <!-- title div -->
            <div class="well well-sm text-center">
                <h3><strong><em><span id="spanTransport"></span></em> Chat Room <span id="spanAppPath"></span></strong></h3>
                <h4>Welcome <em><span id='spanUser'></span></em></h4>
                <h5>Date/Hour connection: <em><span id='spanDateConnection'></span></em></h5>
                <h5>cdf54.ja.signalrR.chat.js file version <em><span id='spanJsVersion'></span></em></h5>
            </div>
            <!-- status div -->
            <div class="well well-sm text-left">
                <span class="glyphicon glyphicon-info-sign"></span> <strong><span>Status: </span></strong> <span id='spanState' class="text-info"></span>
            </div>
        </div>
    </div><!-- up row -->
    <!-- upper row -->
    <div class="row">
        <!-- left col -->
        <div class="col-lg-6 col-sm-6">

        </div><!-- left col -->
        <!-- right col -->
        <div class="col-lg-6 col-sm-6">

        </div><!-- right col -->
    </div><!-- upper row -->
    <!-- middle row -->
    <div class="row">
        <!-- left col -->
        <div class="col-lg-3 col-sm-3">
            <!-- users div -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-user"></span>&nbsp;Users on line <span class="badge" id='spanUsersCount'></span></h3>
                </div>
                <div id="panelUsers" class="panel-body panelScrollDown">
                    <div id="divusers"></div>
                </div>
            </div><!-- users div -->
        </div><!-- left col -->
        <!-- center col -->
        <div class="col-lg-9 col-sm-9">
            <!-- multimedia samples div -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-music"></span>&nbsp;Multimedia samples links</h3>
                </div>
                <div class="panel-body">
                    <em>Copy and paste the text below</em>
                    <ul>

                        <li>
                            <strong>ImageContentProvider 1 Image:</strong> My message http://venturebeat.com/wp-content/uploads/2012/11/datacenter.jpg
                        </li>
                        <li>
